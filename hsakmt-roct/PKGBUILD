pkgname=hsakmt-roct
pkgver=3.1.0
pkgrel=1
pkgdesc="Radeon Open Compute Thunk Interface"
arch=('x86_64')
url='https://github.com/RadeonOpenCompute/ROCT-Thunk-Interface'
license=('MIT')
depends=('numactl' 'pciutils')
makedepends=('cmake')
provides=("roct-thunk-interface=$pkgver")
replaces=('roct-thunk-interface')
source=("$pkgname::git+$url#tag=roc-$pkgver")
sha256sums=('SKIP')

build() {
  cmake -DCMAKE_INSTALL_PREFIX=/opt/rocm "$pkgname"
  make all build-dev
}

package() {
  make DESTDIR="$pkgdir" install install-dev

  install -Dm644 "$pkgname/LICENSE.md" "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
  install -d "$pkgdir/etc/ld.so.conf.d"
  cat << EOF > "$pkgdir/etc/ld.so.conf.d/roct-thunk-interface.conf"
/opt/rocm/lib
EOF
}
